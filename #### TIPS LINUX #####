# Informações de CPU / Memória

echo -n 'CPU: ' ; cat /proc/cpuinfo | grep processor | wc -l ; free -m | head -n+2 |tail -1 | awk '{print \"Memória:\" , \$2/1024, \"GB\"}'  >> Backup_Info.txt
